{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "es6":     true,
        "browser": true,
        "node":    true,
        "mocha":   true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
      "linebreak-style": [
	  	"error",
	  	"unix"
	  ],
	  "no-unused-vars": 0,
	  "no-mixed-spaces-and-tabs": 0,
	  "no-useless-escape": 0,
	  "no-console": 0,
	  "no-cond-assign": 0,
	  "no-unreachable": 0
    },
    "settings": {
      "react": {
        "version": "16.3"
      }
    },
    "globals": {
	    "tinymce": true,
	    "wp": true,
	    "jQuery": true
	}
}